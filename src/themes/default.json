{
    
    "overrides": {
        "MuiCssBaseline": {
            "@global": {
                "html": {
                    "scrollBehavior": "smooth"
                },
                "body": {
                    "backgroundColor": "#F3F6FF"
                },
                ".MuiButton-root": {
                    "fontFamily": "ippc_bold",
                    "textTransform": "capitalize"
                },
                ".MuiTabs-indicator": {
                    "backgroundColor": "rgba(26, 216, 197, 1) !important"
                },
                ".Mui-selected": {
                    "fontFamily": "ippc_extrabold !important"
                },
                ".MuiLinearProgress-barColorPrimary": {
                    "backgroundColor": "#1AD8C5 !important"
                },
                ".MuiFormLabel-asterisk": {
                    "color": "red"
                }
            }
        }
    },
    "palette": {
        "common": {
            "black": "rgba(0, 0, 0, 1)",
            "white": "#fff",
            "hash": "#F0F0F0"
        },
        "background": {
            "paper": "#fff",
            "default": "#F8F8F8"
        },
        "primary": {
            "light": "#ECECF9",
            "main": "#4448C2",
            "dark": "#18486c",
            "contrastText": "#fff"
        },
        "secondary": {
            "light": "#eebc98",
            "main": "#F5B800",
            "dark": "#a37858",
            "contrastText": "#fff"
        },
        "ternary": {
            "light": "rgba(71, 223, 208, 1)",
            "main": "#DE2525",
            "dark": "rgba(18, 151, 137, 1)",
            "contrastText": "#fff"
        },
        "error": {
            "light": "#e57373",
            "main": "#f44336",
            "dark": "#d32f2f",
            "contrastText": "#fff"
        },
        "text": {
            "primary": "rgba(17, 15, 71, 1)",
            "secondary": "rgba(112, 111, 128, 1)",
            "disabled": "rgba(112, 111, 128, 0.86)",
            "hint": "rgba(112, 111, 128, 0.86)",
            "dark":"#333558",
            "deepBlue":"#06094D",
            "white":"#fff"
        },
        "hash": {
            "primary": "#83859B",
            "secondary": "#F0F0F0",
            "disabled": "rgba(112, 111, 128, 0.86)",
            "hint": "rgba(112, 111, 128, 0.86)"
        }
    }
}
